<Window x:Class="DragonFileManager.ImageDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragonFileManager"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="" 
        ResizeMode="NoResize">
    <Image x:Name="img0" Stretch="None" UseLayoutRounding="True" SnapsToDevicePixels="True" 
           MouseLeftButtonDown="Img_MouseLeftButtonDown" MouseWheel="ChangeSize"/>
</Window>
